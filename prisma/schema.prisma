generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  name      String?
  role      Role       @default(STUDENT)
  profilePicture String? // <-- TAMBAHAN
  createdAt   DateTime @default(now()) // <--- TAMBAHAN
  resetToken  String? // <--- TAMBAHAN
  resetTokenExpiry DateTime? // <--- TAMBAHAN
  registrations Registration[]
}

model Class {
  id        String     @id @default(uuid())
  name      String
  quota     Int
  available Int
  description String?   // TAMBAHAN
  trainingDate  DateTime? // Ganti dari imageUrl menjadi trainingDate
  registrations Registration[]
}

model Registration {
  id         String   @id @default(uuid())
  userId     String
  classId    String
  createdAt  DateTime @default(now())

  user  User @relation(fields: [userId], references: [id])
  class Class @relation(fields: [classId], references: [id])

  @@unique([userId, classId])
}

enum Role {
  ADMIN
  STUDENT
}